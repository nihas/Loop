<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/black">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/subtitleTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/titleMainText"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/white"
                android:paddingTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:text="London"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleMainText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/subtitleTimeText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:gravity="left"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_15sdp"
                android:text="Heart of england tourism"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/essayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/titleMainText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="left"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/about_us"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/anotherTitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/essayText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="left"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:text="Digital by default"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/secondEssayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/anotherTitleText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="left"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/digital"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/thirdEssayText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/secondEssayText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="left"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/about_us"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>